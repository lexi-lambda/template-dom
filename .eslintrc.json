{
  "env": {
    "browser": true
  },
  "globals": {
    "require": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "array-bracket-spacing": 1,
    "arrow-parens": [1, "as-needed"],
    "arrow-spacing": 1,
    "block-spacing": 1,
    "brace-style": [1, "1tbs", { "allowSingleLine": true }],
    "camelcase": 1,
    "comma-dangle": [1, "always-multiline"],
    "comma-spacing": 1,
    "comma-style": 1,
    "computed-property-spacing": 1,
    "dot-location": [1, "property"],
    "dot-notation": 1,
    "eol-last": 1,
    "eqeqeq": [1, "allow-null"],
    "func-style": [1, "expression"],
    "generator-star-spacing": [1, "after"],
    "indent": [1, 2, { "SwitchCase": 1 }],
    "key-spacing": 1,
    "keyword-spacing": 1,
    "new-parens": 1,
    "no-alert": 1,
    "no-caller": 1,
    "no-case-declarations": 1,
    "no-class-assign": 2,
    "no-cond-assign": 1,
    "no-console": 1,
    "no-const-assign": 2,
    "no-constant-condition": 1,
    "no-debugger": 1,
    "no-delete-var": 2,
    "no-dupe-args": 2,
    "no-dupe-class-members": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty-character-class": 1,
    "no-empty-pattern": 1,
    "no-empty": 1,
    "no-eval": 2,
    "no-ex-assign": 1,
    "no-extra-bind": 1,
    "no-extra-boolean-cast": 1,
    "no-extra-semi": 1,
    "no-fallthrough": 1,
    "no-floating-decimal": 1,
    "no-func-assign": 2,
    "no-implied-eval": 2,
    "no-invalid-this": 2,
    "no-irregular-whitespace": 1,
    "no-labels": [2, { "allowLoop": true, "allowSwitch": true }],
    "no-lone-blocks": 1,
    "no-lonely-if": 1,
    "no-multiple-empty-lines": 1,
    "no-negated-in-lhs": 1,
    "no-new-func": 2,
    "no-new-object": 1,
    "no-new-wrappers": 1,
    "no-obj-calls": 1,
    "no-octal": 1,
    "no-param-reassign": 1,
    "no-redeclare": 2,
    "no-return-assign": 1,
    "no-self-compare": 1,
    "no-spaced-func": 1,
    "no-sparse-arrays": 2,
    "no-throw-literal": 1,
    "no-trailing-spaces": 1,
    "no-undef": 2,
    "no-unexpected-multiline": 1,
    "no-unneeded-ternary": 1,
    "no-unreachable": 1,
    "no-unused-expressions": 1,
    "no-unused-vars": [1, { "argsIgnorePattern": "^_" }],
    "no-use-before-define": 2,
    "no-useless-call": 1,
    "no-useless-concat": 1,
    "no-var": 2,
    "no-void": 1,
    "no-with": 2,
    "object-curly-spacing": [1, "always"],
    "operator-assignment": [1, "always"],
    "operator-linebreak": 1,
    "padded-blocks": [1, "never"],
    "prefer-arrow-callback": 1,
    "prefer-const": 1,
    "quote-props": [1, "as-needed"],
    "quotes": [1, "single", "avoid-escape"],
    "radix": 1,
    "semi-spacing": 1,
    "semi": 2,
    "space-before-blocks": 1,
    "space-before-function-paren": [1, { "anonymous": "always", "named": "never" }],
    "space-in-parens": 1,
    "space-unary-ops": 1,
    "spaced-comment": 1,
    "use-isnan": 1,
    "valid-typeof": 1,
    "wrap-iife": 1,
    "yoda": [1, "never"]
  }
}
